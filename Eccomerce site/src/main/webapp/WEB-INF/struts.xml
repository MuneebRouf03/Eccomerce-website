<?xml version="1.0" encoding="UTF-8"?>
<struts>
    <package name="default" extends="struts-default">
        
        <action name="register" class="ecommerce.RegisterAction">
            <result>/login.jsp</result>
        </action>
        
        <action name="login" class="ecommerce.LoginAction">
            <result>/viewItems.jsp</result>
        </action>
        
        <action name="logout" class="ecommerce.LogoutAction">
            <result>/index.jsp</result>
        </action>
        
        <action name="addItem" class="ecommerce.ItemAction" method="addItem">
            <result type="redirect">viewItems</result>
        </action>
        
        <action name="viewItems" class="ecommerce.ItemAction" method="viewAllItems">
            <result>/viewItems.jsp</result>
        </action>
        
        <action name="makeBid" class="ecommerce.BidAction" method="makeBid">
            <result type="redirect">viewItems</result>
        </action>
        
        <action name="viewMyBids" class="ecommerce.BidAction" method="viewMyBids">
            <result>/myBids.jsp</result>
        </action>
        
        <action name="viewAllUsers" class="ecommerce.UserAction">
            <result>/allUsers.jsp</result>
        </action>
        
    </package>
</struts>