<?xml version="1.0" encoding="UTF-8"?>
<!-- This is the configuration file for the web application -->
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    id="WebApp_ID" version="3.0">
    
    <!-- Name of the web application (shown in server/admin tools) -->
    <display-name>eCommerceApp</display-name>
    
    <!-- Set up Struts2 framework - this tells the server to use Struts2 for handling web requests -->
    
    <filter>
        <filter-name>struts2</filter-name>
        
        <!-- This is the main Struts2 class that processes all requests -->
        <filter-class>org.apache.struts2.dispatcher.filter.StrutsPrepareAndExecuteFilter</filter-class>
    </filter>
    
    <!-- Tell Struts2 to handle ALL URLs in the application (every page request) -->
    
    <filter-mapping>
        <filter-name>struts2</filter-name>
        
        <!-- /* means "all URLs starting from the root of the website" -->
        
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- When someone visits the website, show index.jsp as the first page -->
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
</web-app>